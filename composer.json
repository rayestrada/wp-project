{
    "name": "avb/wp-recommended-project",
    "description": "Wordpress project template using Composer and Lando",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress/wordpress",
                "version": "6.8.3",
                "type": "wordpress-core",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/refs/tags/6.8.3.zip"
                }
            }
        }
    ],
    "require": {
        "wordpress/wordpress": "6.8.3",
        "wpackagist-plugin/block-visibility": "3.7.1",
        "wpackagist-plugin/twentig": "1.9.4",
        "wpackagist-plugin/widget-for-eventbrite-api": "6.4.0",
        "wpackagist-plugin/wordfence-login-security": "1.1.15",
        "wpackagist-plugin/wp-swiper": "1.3.4"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "scripts": {
        "post-install-cmd": "cp -r ./vendor/wordpress/wordpress/* ./"
    }
}
